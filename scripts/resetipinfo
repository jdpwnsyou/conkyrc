#!/bin/bash

ip=`curl -s ipinfo.io | grep "ip" | cut -d '"' -f4`
echo $ip > /home/jd/.vpn/public_ip #EDIT LINE 

city=`curl -s ipinfo.io | grep "city" | cut -d '"' -f4`
   if [[ -z "$city" ]]; then
      echo "N/A" > /home/jd/.vpn/city #EDIT LINE 
      else
      echo $city > /home/jd/.vpn/city #EDIT LINE 
   fi

region=`curl -s ipinfo.io | grep "region" | cut -d '"' -f4`
   if [[ -z "$region" ]]; then
      echo "N/A" > /home/jd/.vpn/region #EDIT LINE
      else
      echo $region > /home/jd/.vpn/region #EDIT LINE
   fi
