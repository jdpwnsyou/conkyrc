#!/bin/bash
# This script will start the VPN client for a US EAST server and update conky info as necessary 

if [ "$(id -u)" != "0" ]
then
   status=$(pgrep openvpn)
   if [[ -z "$status" ]]
   then
      sudo systemctl start openvpn@useast.service
      echo "Sleeping 5 seconds to accomodate IP info update for conky..."
      sleep 5
      resetipinfo
      touch /home/jd/.vpn/vpn_active 
   else
      echo "VPN already running!"
   fi
else
   echo "Do not run this script as root, it will break things :("
fi
